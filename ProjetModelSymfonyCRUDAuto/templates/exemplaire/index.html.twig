    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exemplaire in exemplaires %}
            <tr>
                <td>{{ exemplaire.id }}</td>
                <td>{{ exemplaire.etat }}</td>
                <td>
                    <a href="{{ path('exemplaire_show', {'id': exemplaire.id}) }}">show</a>
